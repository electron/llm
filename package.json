{
  "name": "@electron/llm",
  "version": "0.1.0",
  "description": "Load and use an LLM model directly in Electron",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "workspaces": [
    "end-to-end"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./main": {
      "types": "./dist/main/index.d.ts",
      "default": "./dist/main/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer/index.d.ts",
      "default": "./dist/renderer/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "tsc": "tsc --build",
    "lint:check": "prettier --check \"**/*.{ts,js}\"",
    "lint:fix": "prettier --write \"**/*.{ts,js}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run test:e2e:tsc && npm run test:e2e:rebuild && npm run test:e2e:run",
    "test:e2e:tsc": "tsc -p end-to-end/tsconfig.json",
    "test:e2e:rebuild": "electron-rebuild",
    "test:e2e:run": "electron end-to-end/dist/main.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "author": "Electron Community",
  "keywords": [
    "electron",
    "llm",
    "ai",
    "chat",
    "chatbot",
    "chatgpt",
    "llama",
    "llama.cpp"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electron/llm.git"
  },
  "dependencies": {
    "node-llama-cpp": "^3.5.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "@tsconfig/node22": "^22.0.0",
    "@vitest/coverage-v8": "^3.0.7",
    "electron": "^35.1.4",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  }
}
